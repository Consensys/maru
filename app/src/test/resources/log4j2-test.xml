<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
  <Appenders>
    <Console name="console" target="SYSTEM_OUT">
      <PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="maru" level="DEBUG" additivity="false">
      <AppenderRef ref="console"/>
    </Logger>
<!--    <Logger name="org.hyperledger.besu.ethereum.blockcreation" level="TRACE"/>-->
<!--    <Logger name="org.hyperledger.besu.ethereum.api.jsonrpc.internal.methods.ExecutionEngineJsonRpcMethod"-->
<!--            level="TRACE"/>-->
<!--    <Logger name="org.hyperledger.besu.consensus.merge.blockcreation.MergeCoordinator"-->
<!--            level="TRACE"/>-->
    <Logger name="org.hyperledger.besu" level="INFO"/>
    <Root level="INFO" additivity="false">
      <appender-ref ref="console"/>
    </Root>
  </Loggers>
</Configuration>
